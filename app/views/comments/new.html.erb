<%= form_for @comment, :url => @url, :html => { :class => 'form ' } do |form| %>
  <% if @comment.errors.any? %>
    <div class="alert-message block-message error">
      <p>There was a problem creating this comment:</p>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      <ul>
    </div>
  <% end %>

  <fieldset>
    <legend>Relevant data:</legend>
    <label>Comment</label>
    <%= form.text_area :body, :class => 'span6', :rows => 5 %>
  </fieldset>


  <fieldset>
    <div class="form-actions">
      <%= form.submit "Save comment", :class => 'btn btn-primary' %>
      <%= link_to "Back", @home_object %>
    </div>
  </fieldset>

<% end %>