<%= tag(:meta, charset: 'utf-8') %>
<%= tag(:meta, name: 'viewport', content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0') %>
<%= content_tag(:title, content_for?(:title) ? yield(:title) + ' - Debate Summary' : "Debate Summary") %>
<%= tag(:link, rel: 'shortcut icon', href: '/favicon.ico') %>
<%= tag(:link, rel: 'apple-touch-icon', href: '/apple-touch-icon.png') %>
<%= tag(:meta, name: 'msapplication-TileImage', content: '/apple-touch-icon.png') %>
<%= tag(:meta, name: 'msapplication-TileColor', content: '#ffffff') %>
<%= yield(:meta) %>
<%= javascript_tag do -%>
  <% if current_user %>
      Bugsnag.user = <%=raw current_user.to_json(only: [:id, :name, :email]) %>;
  <% end %>
  Bugsnag.appVersion = "<%= Rails.root.realpath.to_s.split('/').last %>";
  Bugsnag.releaseStage = "<%= Rails.env %>";
  Bugsnag.notifyReleaseStages = ["staging", "production"];
<% end -%>
