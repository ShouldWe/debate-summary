<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <% @pages.each do |page| %>
    <url>
      <loc><%= full_url(home_url(page)) %></loc>
      <lastmod><%= page.updated_at.to_date.to_s(:db) %></lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.8</priority>
    </url>
  <% end %>

  <% @issues.each do |issue| %>
    <url>
      <loc><%= full_url(issue_url(issue)) %></loc>
      <lastmod><%= issue.updated_at.to_date.to_s(:db) %></lastmod>
      <changefreq>daily</changefreq>
      <priority>0.5</priority>
    </url>
  <% end %>

  <% @users.each do |user| %>
    <url>
      <loc><%= full_url(user_url(user)) %></loc>
      <lastmod><%= user.updated_at.to_date.to_s(:db) %></lastmod>
      <changefreq>daily</changefreq>
      <priority>0.5</priority>
    </url>
  <% end %>
</urlset>
