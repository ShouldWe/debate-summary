<section id="all_issues">
  <h2>Issues with contributions from <%= link_to @user.name, user_path(@user) %></h2>
  <table>
    <thead>
      <tr>
        <th class="span2">Title</th>
        <th class="span8">Detail and context</th>
      </tr>
    </thead>
    <tbody>
      <% @issues.each do |issue| %>
      <tr>
        <td><%= link_to issue.title, issue_path(issue) %></td>
        <td>
          <% issue.statements.each do |d| %>
            <%= d.name %> : <%= d.body %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>